{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "upgrade": {
    "source": "cdn",
    "interval": "168h",
    "auto": false,
    "notice": false
  },
  "palette": {
        "pink": "#F4B8E4",
        "mauve": "#CA9EE6",
        "base": "#303446",
        "blue": "#8CAAEE",
        "green": "#A6D189",
        "red": "#E78284",
        "teal": "#81C8BE",
        "sapphire": "#85C1DC",
        "surface0": "#414559",
        "surface1": "#51576D",
        "text": "#C6D0F5",
        "mantle": "#292C3C"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "background": "p:blue",
          "foreground": "p:mantle",
          "properties": {
            "display_host": false
          },
          "style": "diamond",
          "template": "{{if .Root}} \uf0e7 {{.UserName}} {{else}} {{.UserName}} {{end}}",
          "type": "session"
        },
        {
          "background": "p:surface0",
          "foreground": "p:blue",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "folder_icon": "\uf115",
            "folder_separator_icon": " \ue0b1 ",
            "max_depth": 2,
            "style": "agnoster_short"
          },
          "style": "powerline",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true
          },
          "trailing_diamond": "\ue0b0",
          "template": " {{ .HEAD }}{{ if .Staging.Changed }}<FF6F00> \uf046 {{ .Staging.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "foreground": "p:text",
          "background": "p:mantle",
          "type": "git",
          "style": "diamond",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:pink{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:pink{{ end }}",
            "{{ if gt .Ahead 0 }}p:teal{{ end }}",
            "{{ if gt .Behind 0 }}p:sapphire{{ end }}"
          ],
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:base{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:base{{ end }}",
            "{{ if gt .Ahead 0 }}p:base{{ end }}",
            "{{ if gt .Behind 0 }}p:base{{ end }}"
          ]
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
